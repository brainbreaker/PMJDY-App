<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.bom.india_hackaton">

    <!-- Phone state -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Save external (logs) -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="org.bom.india_hackaton.App"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <!-- Set custom default icon. This is used when no icon is set for incoming notification messages.
        See README(https://goo.gl/l4GJaQ) for more. -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/pmjdylogo" />
        <!-- Set color used with incoming notification messages. This is used when no color is set for the incoming
             notification message. See README(https://goo.gl/6BKBk7) for more. -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />

        <activity
            android:name="org.bom.india_hackaton.activities.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.bom.india_hackaton.activities.LoginActivity"
            android:launchMode="singleTop" />
        <activity android:name="org.bom.india_hackaton.activities.BankingHomeActivity" />
        <activity android:name="org.bom.india_hackaton.activities.AccountInfoActivity" />
        <activity android:name="org.bom.india_hackaton.activities.AccountListActivity" />
        <activity android:name="org.bom.india_hackaton.activities.TransactionHistoryActivity" />
        <activity android:name="org.bom.india_hackaton.activities.imt.ImtActivity" />
        <activity android:name="org.bom.india_hackaton.activities.fundtransfer.FundTransferActivity" />

        <service
            android:name="org.bom.india_hackaton.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

    </application>

</manifest>